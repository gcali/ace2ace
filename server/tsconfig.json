{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "alwaysStrict": true,
        "outDir": "bin"
    },
    "include": [
        "src/**/*.ts",
        "../common/src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "../common/src/**/*spec.ts"
    ]
}